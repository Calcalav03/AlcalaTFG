<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AlcalaTFG.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AlcalaTFG"
    xmlns:views="clr-namespace:AlcalaTFG.Views"
    Title="AlcalaTFG"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="Login" />
        


        <Tab Title="Menu Principal" Shell.TabBarTitleColor="Aqua">
            <ShellContent ContentTemplate="{DataTemplate views:MenuPrincipal}" Route="MenuPrincipal" />
        </Tab>

        <Tab Title="" IsEnabled="False">
            <ShellContent ContentTemplate="{DataTemplate views:FormularioCaptura}" Route="FormularioCaptura" />
        </Tab>

        <Tab Title="" IsEnabled="False">
                <ShellContent ContentTemplate="{DataTemplate views:FormularioEquipamientoCebo}" Route="FormularioCeboEquipamiento" />
        </Tab>

        <Tab Title="" IsEnabled="False">
                    <ShellContent ContentTemplate="{DataTemplate views:CapturaGlobalView}" Route="CapturaGlobalView" />
        </Tab>

        <Tab Title="" IsEnabled="False">
                        <ShellContent ContentTemplate="{DataTemplate views:CapturaUsuView}" Route="CapturaUsuView" />
        </Tab>


    </TabBar>

</Shell>
