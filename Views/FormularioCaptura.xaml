                        </Picker.Items>
                    </Picker>



                    <!--  Lista de sabores de frutas  -->
                </VerticalStackLayout>

                <!--  SecciÃ³n de entrada de datos  -->
                <VerticalStackLayout>
                    <!--  Campo para el nombre  -->
                    <Label
                        Margin="50,20,0,0"
                        FontFamily="Nature"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Especie:"
                        TextColor="Black" />

                    <Entry
                        Margin="50,5,0,0"
                        BackgroundColor="LightGray"
                        FontFamily="Comic Sans MS"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Placeholder="Ingresa el nombre del ejemplar"
                        TextColor="Gray"
                        WidthRequest="200" 
                        Text="{Binding Nombre}"/>

                    <!--  Campo para la descripciÃ³n  -->
                    <Label
                        Margin="50,10,0,0"
                        FontFamily="Nature"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Ubicacion:"
                        TextColor="Black" />
                    <Entry
                        Margin="50,5,0,0"
                        BackgroundColor="LightGray"
                        FontFamily="Comic Sans MS"
                        FontSize="15"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        Placeholder="Ingresa la Ubicacion"
                        TextColor="Gray"
                        WidthRequest="200" 
                        Text="{Binding Ubicacion}"/>

                    <Label
                        Margin="50,10,0,0"
                        FontFamily="Nature"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Fecha captura:"
                        TextColor="Black" />
                    <DatePicker
                        Margin="50,5,0,0"
                        BackgroundColor="LightGray"
                        FontFamily="Comic Sans MS"
                        FontSize="15"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        TextColor="Gray"
                        WidthRequest="200" 
                        Date="{Binding Fecha, Mode=TwoWay}"
                        />

                    <Label
                        Margin="50,10,0,0"
                        FontFamily="Nature"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Clima:"
                        TextColor="Black" />
                    <Picker
                        Margin="50,5,0,0"
                        BackgroundColor="LightGray"
                        HorizontalOptions="Start"
                        TextColor="Gray"
                        WidthRequest="120" 
                        SelectedItem="{Binding Clima}">
                        <Picker.Items>
                            <x:String>Soleado</x:String>
                            <x:String>Nublado</x:String>
