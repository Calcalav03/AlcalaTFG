                        BackgroundColor="LightGreen"
                        FontFamily="Nature"
                        Command="{Binding CrearCapturaCommand}"
                        Text="Crear"
                        WidthRequest="120" />
                    <Button
                        Margin="5,20,0,0"
                        BackgroundColor="LightCoral"
                        FontFamily="Nature"
                        Text="Limpiar"
                        WidthRequest="120" />

                </VerticalStackLayout>




            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentPage>