                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Temperatura:"
                        TextColor="Black" />
                    <Picker
                        Margin="50,5,0,0"
                        BackgroundColor="LightGray"
                        HorizontalOptions="Start"
                        TextColor="Gray"
                        WidthRequest="120"  SelectedItem="{Binding Temperatura}">
                        <Picker.Items>
                            <x:String>-10Â°C</x:String>
                            <x:String>-7Â°C</x:String>
