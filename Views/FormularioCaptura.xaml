                        BackgroundColor="LightGray"
                        FontFamily="Comic Sans MS"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Placeholder="Ingresa el peso del ejemplar"
                        TextColor="Gray"
                        WidthRequest="200" 
                        Keyboard="Numeric"
